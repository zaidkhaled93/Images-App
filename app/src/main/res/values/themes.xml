<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ImagesCatalog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.HugeTextView" parent="android:Widget.Material.TextView">
        <item name="android:textSize">@dimen/_24ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.MediumTextView" parent="android:Widget.Material.TextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.SmallTextView" parent="android:Widget.Material.TextView">
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TinyTextView" parent="android:Widget.Material.TextView">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="InputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/editTextTitleColor</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="AppTheme.BaseButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">@dimen/_2sdp</item>
    </style>

    <style name="AppTheme.GrayButton" parent="AppTheme.BaseButton">
        <item name="backgroundTint">@color/gray_color</item>
    </style>

    <style name="AppTheme.ProgressBar" parent="Theme.ImagesCatalog">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="ImagesRecyclerView">
        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="spanCount">2</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>